<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow_transparent"
    android:padding="16dp">

    <!-- Header dengan tombol panah di kiri, logo, dan profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Pindahkan tombol panah ke kiri atas -->
        <ImageButton
            android:id="@+id/btn_back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_left"/>

        <!-- Logo di tengah -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LOGO WISJAH"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <!-- Tombol profil di kanan -->
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_user_profile"
            android:contentDescription="User Profile" />
    </LinearLayout>

    <!-- Kolom Pencarian -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Cari lokasi wisata"
        android:paddingStart="40dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_background"
        android:layout_marginBottom="16dp" />

    <!-- Pilih Lokasi -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih lokasi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Foto Lokasi Pilihan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Tombol Foto 1 -->
        <ImageButton
            android:id="@+id/btn_location_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:src="@drawable/logo_bali"
            android:contentDescription="Foto Lokasi 1"/>

        <!-- Tombol Foto 2 -->
        <ImageButton
            android:id="@+id/btn_location_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_location_2"
            android:contentDescription="Foto Lokasi 2"/>

        <!-- Tombol Foto 3 -->
        <ImageButton
            android:id="@+id/btn_location_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_location_3"
            android:contentDescription="Foto Lokasi 3"/>
    </LinearLayout>

    <!-- Unggulan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unggulan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Foto Unggulan dengan Nama dan Alamat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/rounded_background"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/featured_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="FOTO"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@drawable/rounded_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/featured_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Wisata"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/featured_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- Terdekat -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terdekat"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Foto Terdekat dengan Nama dan Alamat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/rounded_background">

        <TextView
            android:id="@+id/nearby_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="FOTO"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@drawable/rounded_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/nearby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Wisata"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nearby_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
